doctype html
html(ng-app="gameNight")
  head
    title GameNight
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body(ng-controller="AppCtrl")
    header(ng-class="{'loading': loading}")
        h1 GameNight
    block content
    section#loading.centered
        p(class="text-center" ng-show="loading")
            i(class="fa fa-spinner fa-spin")
    // Angular and libraries
    script(src='/angular.js')
    script(src='/angular-animate.min.js')
    script(src='/javascripts/ui-bootstrap/ui-bootstrap-tpls-0.14.2.min.js')
    // Angular application parts
    script(src='/javascripts/angular/controllers.js')
    script(src='/javascripts/angular/filters.js')
    script(src='/javascripts/angular/app.js')
